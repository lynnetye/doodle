<div class="create-dates">
  {{full-calendar selectDates="createNewDateRecord"}}
  {{create-submit-button submit="submitDates"}}
</div>

<div class="selected-dates-container">
  {{#each sortedDates as |date|}}
    {{date-selection date=date
                     createNewTimeSlot="createNewTimeRecord"}}
  {{/each}}
</div>
